@model WikiPage
<textarea id="text">@Html.Raw(Model.Text)</textarea>

<script type="text/javascript">
  $(function() {
      var text = $("#text");
      lightwiki.setup({
          cometUrl:          '@Url.Content("~/comet.axd")',
          revisionContainer: '#revision',
          page:              '@Model.Slug',
          serverRevision:    @Model.RevisionNumber,
          editor: {
              getText : function() { return text.val(); },
              setText : function(value) { return text.val(value); }
          }
      });
  });
</script>